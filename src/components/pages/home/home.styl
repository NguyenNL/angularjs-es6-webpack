#home
  height 100%
  width 100%
  position relative
  .home-container
    display flex
    flex-direction row
    height 100%
    width 100%
    input
      border: 1px solid #c3c2c2
      border-radius: 0.3rem
    .json-area
      width 50%
      height 100%
      display flex
      flex-direction column
      .json-container
        height 50%
        width 100%
      .bot-container
        width: 100%
        height: 50%
        .message
          height 100%
          background-color: #fff;
          border-right: 1px solid #a5a2a2;
          .msg-history
            height: 92%
            overflow-y: auto
            border-bottom: 1px solid #a5a2a2
            padding 1rem
            .bot-msg
              display: flex
              flex-direction: row
              background-color: #e9ebee
              padding: 0.3rem
              border-radius: 0.3rem
              margin-bottom 2rem
              height 2rem
              .bot-title
                margin-right 1rem
            .user-msg
              text-align right
              padding 0.3rem
              background-color #05728f
              margin-bottom 2rem
              border-radius 0.3rem
              color white
              height 2rem
          .type-msg
            display flex
            flex-direction row
            height 8%
            #user-input
              width 90%
              height 100%
              input
                height 100%
                width 100%
    .node-area
      width 50%
      padding 1rem
      font-size 0.8rem
      .start-define
        display flex
        flex-direction row
        input
          margin-right 0.5rem
      .event-node
        margin-top 0.5rem
        padding-bottom 1rem
        border-bottom 1px solid #bbb2b2
        p
          margin-bottom 0.25rem
        .say-something
          margin-bottom 1rem
          display flex
          flex-direction row
          input
            margin-right 0.5rem
        .execute-code-container
          display flex
          flex-direction row
          .select
            margin-right 1rem
          input
            margin-right 1rem
      .transition
        margin-top 0.5rem
        border-bottom 1px solid #bbb2b2
        padding-bottom 0.5rem
        .transition-container
          display flex
          flex-direction row
          input
            margin-right 1rem
      .create-node-btn
        margin-top 1rem
      .node-wrapper
        display flex
        flex-direction row
        padding 1rem
        .node-list
          display flex
          flex-direction column
          .node
            width 5rem
            background-color white
            border 1px solid #bbb3b3
            margin-bottom 2rem
            cursor pointer
        .edit-node
          padding 1rem
          display flex
          flex-direction column
          .text-area
            width: 25rem
            height: 20rem
        button
          margin-top 0.5rem

