#nav
  position relative
  height 100%
  width 100%
  min-height 100vh
  overflow hidden
  background-color #e9ebee
  .child-page
    height 100%
  .nav-container
    position relative
    width: 100%;
    background-color: #000;
    padding: 0rem 2rem;
    color: #fff;
    display table
    height 3.4rem
    .account-wrap
      float right
      display flex
      flex-direction row
      align-items center
      height 100%
      .user-icon
        font-size 2rem
        margin-right 0.5rem
      .drop-icon
        font-size 1.5rem
        padding-left 1rem
        outline none
      .user-avatar
        height 100%
        margin-right 0.5rem
        img
          height: 4rem
          width: 4rem
          border-radius 100%
          transform: scale(0.7)
    .text-title-wrap
      float left
      height 100%
      text-align center
      display: flex
      align-items: center
      .text-project
        color white
    .drop-down-list
      position absolute
      padding 1rem
      width 10rem
      right 0
      background-color black
      top 3rem
      z-index: 1
      .drop-down-item
        cursor pointer
        display flex 
        flex-direction row
        align-items center
        i 
          padding-right 1rem


  
